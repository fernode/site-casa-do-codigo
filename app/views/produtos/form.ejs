<html lang="pt-br">

<head>
</head>

<body>
    <div class="erros">
        <%if(errosValidacao){%>
            <ul>
                <%for(let i=0; i<errosValidacao.length; i++){%>
                    <li>
                        <%= errosValidacao[i].param%> :
                            <%= errosValidacao[i].msg%>
                    </li>
                    <%}%>
            </ul>
            <%}%>
    </div>
    <form action="/produtos" method="POST">
        <div>
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" value="<%=produto.titulo%>" id="titulo" placeholder="Coloque o título">
        </div>
        <div>
            <label for="preco">Preço</label>
            <input type="text" name="preco" value="
            <%=produto.preco%>" id="preco" placeholder="31.49">
        </div>
        <div>
            <label for="descricao">Descrição</label>
            <textarea cols="20" rows="10" name="descricao" value="
            <%=produto.descricao%>" id="descricao" placeholder="Descrição do livro"></textarea>
        </div>
        <input type="submit" value="Gravar">
    </form>
</body>

</html>